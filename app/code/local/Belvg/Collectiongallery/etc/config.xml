<?xml version="1.0"?>
<config>
    <modules>
        <Belvg_Collectiongallery>
            <version>1.0.0</version>
        </Belvg_Collectiongallery>
    </modules>
    <global>
        <helpers>
            <belvg_collectiongallery>
                <class>Belvg_Collectiongallery_Helper</class>
            </belvg_collectiongallery>
        </helpers>
        <models>
            <belvg_collectiongallery>
                <class>Belvg_Collectiongallery_Model</class>
            </belvg_collectiongallery>
        </models>
    </global>
    <frontend>
        <events>
            <catalog_product_collection_load_after>
                <observers>
                    <belvg_collectiongallery>
                        <class>collectiongallery/observer</class>
                        <method>loadMediaGallery</method>
                    </belvg_collectiongallery>
                </observers>
            </catalog_product_collection_load_after>
        </events>
    </frontend>
</config>